// 公共样式
i.icon_right
    display: inline-block
    margin-right: 5px
.content-right-title
    font-weight: bold
.red
    color: red !important
.green
    color: green !important
.error
    color: red 
.modal.in .modal-dialog
    top: 50%;
    transform: translate(0, -50%);
#toast-container
    top: 45%;
// 基础样式
.body-wrapper
    background-color: #E7E8EB
    .header
        min-width: 1270px
        height: 96px
        background-color: #fff
        .h-left
            float: left
            width: 268px
            padding: 10px
            .logo
                display: inline-block
                width: 70px
                height: 78px
                font-size: 20px
                vertical-align: top;
                a
                    display: inline-block
                    img
                        width: 100%
                        height: 100%
            .text
                display: inline-block
                .title
                    margin: 15px 0 12px 0
                    font-size: 24px
                    font-weight: bold
                .des
                    font-size: 18px
        .h-right
            margin-left: 270px
            .nav-wrapper
                float: left
                .right-nav
                    float: left
                    font-size: 18px
                    font-weight: bold
                    margin-top: 59px
                    a
                        display: inline-block
                        padding: 8px 12px
                        color: black
                        transition: all .2s linear
                        &:hover
                            border-bottom: 3px solid #1c89d5
                        &.active
                            border-bottom: 3px solid #1c89d5
            .user-wrapper
                float: right
                margin: 60px 35px 0 0;
                .name
                    display: inline-block
                    vertical-align: top
                    margin: 6px
                    font-size: 16px
                .message
                    display: inline-block
                    vertical-align: top
                    margin: 3px 10px 0 0
                    a
                        font-size: 24px
                        color: #ccc
                .account
                    position: relative
                    display: inline-block
                    vertical-align: top
                    z-index: 1
                    .btn
                        border-radius: 0
                    .user-part
                        position: absolute
                        left: -68px
                        top: 30px
                        z-index: -1
                        padding: 0 10px
                        width: 135px
                        border: 1px solid #1c89d5
                        background-color: #fff
                        li
                            border-bottom: 1px solid #ccc
                            &:last-child
                                border: 0
                            a
                                display: block
                                font-size: 16px
                                line-height: 34px
                                &:hover
                                    color: blue

    .content
        min-width: 1270px
        margin: 20px 10px 0 10px
        background: #fff
        .slidebar
            float: left
            width: 200px
            padding-top: 15px
            // border-right: 1px solid #ccc
            .bar-wrapper
                line-height: 34px
                dt.list
                    padding-left: 30px
                    color: #8d8d8d
                    font-size: 14px
                    cursor: pointer
                    i
                        display: inline-block
                        margin-right: 10px
                dd.list-child
                    &:hover
                        background: #ccc
                    &.active
                        background-color: #1c89d5
                        a
                            color: #fff
                    a
                        display: inline-block
                        width: 100%
                        padding-left: 62px
        .info
            margin: 0px 20px 20px 200px
            padding: 20px 0 0 20px
            border-left: 1px solid #ccc
    